{
  "buffer": {
    "top": 0,
    "left": 0,
    "width": "80%",
    "height": "100%-2",
    "scrollable": true,
    "scrollbar": true,
    "alwaysScroll": true,
    "style": {
      "fg": "#acacac",
      "bg": "#101010",
      "scrollbar": {
        "bg": "blue",
        "fg": "white"
      }
    }
  },
  "input": {
    "bottom": 1,
    "left": 0,
    "width": "80%",
    "height": 1,
    "inputOnFocus": true,
    "style": {
      "fg": "#000000",
      "bg": "#c0c0c0",
      "hover": {
        "bg": "#c0c0c0"
      },
      "focus": {
        "bg": "#c0c0c0"
      }
    }
  },
  "sidebar": {
    "right": 0,
    "top": 0,
    "width": "20%",
    "height": "100%-1",
    "style": {
      "fg": "#acacac",
      "bg": "#404040"
    }
  },
  "statusbar": {
    "bottom": 0,
    "width": "100%",
    "height": 1,
    "style": {
      "fg": "#acacac",
      "bg": "#606060"
    }
  }
}

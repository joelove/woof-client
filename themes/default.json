    "left": 0,
    "width": "80%",
    "height": "100%-2",
    "scrollable": true,
    "style": {
      "fg": "black",
      "bg": "#f0f0f0"
    }
  },
  "input": {
    "bottom": 1,
    "left": 0,
    "width": "80%",
    "height": 1,
    "inputOnFocus": true,
    "style": {
      "fg": "black",
      "bg": "#d3d3d3",
      "hover": {
        "bg": "#b3b3b3"
      },
      "focus": {
        "bg": "#b3b3b3"
      }
    }
  },
  "sidebar": {
    "right": 0,
    "top": 0,
    "width": "20%",
    "height": "100%-1",
    "style": {
      "fg": "black",
      "bg": "#fafafa"
    }
  },
  "statusbar": {
    "bottom": 0,
    "width": "100%",
    "height": 1,
    "style": {
      "fg": "black",
      "bg": "#999999"
    }
  }
